@model List<CordinatorViewer>


<link rel="stylesheet" href="~/css/indexstyling.css" />

<section>
    <h1>Welcome to the Programme Cordinator Dashboard</h1>

    <div class="card">
        <h2>Pre-Approve Claims</h2>
        <div class="filters">
            <label>Month <input type="month" /></label>
            <label>AcademicManager <input type="text" /></label>
            <label>
                State
                <select>
                    <option>Submitted</option>
                    <option>Verified</option>
                    <option>Approved</option>
                    <option>Rejected</option>
                </select>
            </label>
            <button type="button">Apply Filters</button>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Lecturer</th>
                    <th>Month</th>
                    <th>Total</th>
                    <th>State</th>
                    <th>Actions</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Lecturer</td>
                        <td>@item.Month</td>
                        <td>@item.Total</td>
                        <td>R @item.Total.ToString("N2")</td>
                        <td>@item.State</td>
                        <td>
                            <button type="button">Verify</button>
                            <button type="button">Approve</button>
                            <button type="button">Reject</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
