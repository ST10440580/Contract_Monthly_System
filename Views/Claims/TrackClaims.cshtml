@model List<Contract_Monthly_System.Models.LectureViewer>

<link rel="stylesheet" href="~/css/indexstyling.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h2>Your Submitted Claims</h2>

@if (Model.Count == 0)
{
    <p>No claims submitted yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Month</th>
                <th>Module</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total</th>
                <th>Status</th>
                <th>Supporting Document</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Month</td>
                    <td>@claim.Module</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.Total</td>
                    <td>@claim.ClaimState</td>
                    <td>@claim.SupportingDocumentPath</td>
                </tr>
            }
        </tbody>
    </table>
}
