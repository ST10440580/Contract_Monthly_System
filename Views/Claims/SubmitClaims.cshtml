@model Contract_Monthly_System.Models.LectureViewer


<link rel="stylesheet" href="~/css/indexstyling.css" />

<div class="dashboard-wrapper">
    <div class="dashboard-container">
        <h2>Submit a New Claim</h2>

        <form asp-action="SubmitClaim" asp-controller="Lecturer" method="post" enctype="multipart/form-data">


            <div class="form-group">
                <label asp-for="LecturerName"></label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label>Month</label>
                <input asp-for="Month" type="month" class="form-control" />
            </div>

            <div class="form-group">
                <label>Module Name</label>
                <input asp-for="Module" class="form-control" />
            </div>

            <div class="form-group">
                <label>Hours Worked</label>
                <input asp-for="HoursWorked" type="number" step="0.5" class="form-control" />
            </div>

            <div class="form-group">
                <label>Hourly Rate</label>
                <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" />
            </div>

            <div class="form-group">
                <label>Notes</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label>Upload Supporting Document</label>
                <input type="file" name="SupportingDocument" class="form-control" accept=".pdf,.docx,.xlsx" />
            </div>


            <button type="submit" class="btn-action">Submit Claim and Track it</button>

        </form>

        @if (TempData["Message"] != null)
        {
            <div class="alert">@TempData["Message"]</div>
        }
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
