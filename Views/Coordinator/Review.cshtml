@model List<Contract_Monthly_System.Models.Claim>



<h2>Pending Claims</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Lecturer</th>
                <th>Month</th>
                <th>Module</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Notes</th>
                <th>Status</th>
                  <th>Supporting Document</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.Month</td>
                    <td>@claim.Module</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.Notes</td>
                    <td>@claim.State</td>
                    <td>
                       

                        @if (!string.IsNullOrEmpty(claim.SupportingDocumentPath))
                        {
                            <a href="~/@claim.SupportingDocumentPath" target="_blank">View</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                    <td>
                        <form asp-action="PreApprove" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.ClaimId" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@claim.ClaimId" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims to review.</p>
}
